<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/black_pekat</item>
        <item name="android:textColorSecondary">@color/black_pekat</item>
    </style>

    <style name="TextFloatsLogin">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_hint_login</item>
        <item name="android:textColorHint">@color/text_hint_login</item>
        <item name="android:textColorHighlight">@color/text_hint_login</item>
        <item name="android:textColorLink">@color/text_hint_login</item>
        <item name="colorControlNormal">@color/text_hint_login</item>
        <item name="colorControlActivated">@color/text_hint_login</item>
        <item name="colorControlHighlight">@color/text_hint_login</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>
